{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://localhost:4280",
            "webRoot": "${workspaceFolder}",
            "presentation": {
                "hidden": true,
                "group": "",
                "order": 1
            }
        },
        {
            "name": "Launch Edge",
            "request": "launch",
            "type": "pwa-msedge",
            "url": "http://localhost:4280",
            "webRoot": "${workspaceFolder}",
            "presentation": {
                "hidden": true,
                "group": "",
                "order": 1
            }
        },
        {
            "name": "Attach to Node Functions",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "preLaunchTask": "func: host start",
            "presentation": {
                "group": "",
                "order": 1
            }
        }
    ],
    "compounds": [
        {
            "name": "Launch Chrome SWA",
            "configurations": [
                "Attach to Node Functions",
                "Launch Chrome"
            ],
            "stopAll": true,
            "preLaunchTask": "swa start"
        },
        {
            "name": "Relaunch Chrome Debug",
            "configurations": [
                "Attach to Node Functions",
                "Launch Chrome"
            ],
            "stopAll": true
        },
        {
            "name": "Launch Edge SWA",
            "configurations": [
                "Attach to Node Functions",
                "Launch Edge"
            ],
            "stopAll": true,
            "preLaunchTask": "swa start"
        },
        {
            "name": "Relaunch Edge Debug",
            "configurations": [
                "Attach to Node Functions",
                "Launch Edge"
            ],
            "stopAll": true
        }
    ]
}
