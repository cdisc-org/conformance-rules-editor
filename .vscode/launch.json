{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Emulator",
      "command": "swa start http://localhost:3000 --api http://localhost:7071",
      "request": "launch",
      "type": "node-terminal",
      "presentation": {
        "group": "2"
      }
    },
    {
      "name": "Frontend",
      "command": "npm start",
      "request": "launch",
      "type": "node-terminal",
      "env": { "BROWSER": "NONE" },
      "presentation": {
        "group": "2"
      }
    },
    {
      "name": "Backend",
      "command": "npm start",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/api",
      "presentation": {
        "group": "2"
      }
    },
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:4280",
      "webRoot": "${workspaceFolder}",
      "presentation": {
        "group": "2"
      }
    },
    {
      "name": "Launch Edge",
      "request": "launch",
      "type": "msedge",
      "url": "http://localhost:4280",
      "webRoot": "${workspaceFolder}",
      "presentation": {
        "group": "2"
      }
    }
  ],
  "compounds": [
    {
      "name": "ðŸš€ Everything",
      "configurations": [
        "Emulator",
        "Frontend",
        "Backend",
        "Launch Chrome"
      ],
      "presentation": {
        "group": "1"
      }
    }
  ]
}
